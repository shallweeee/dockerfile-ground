OPTIONS=$(getopt --options v: -- "$@") || usage
eval set -- "$OPTIONS"
while true; do
  case "$1" in
    -v) BUILDER_VERSION=$2; shift 2;;
    --) shift; break;;
    *) break;;
  esac
done

[ -z "$BUILDER_VERSION" ] && BUILDER_VERSION="$(. /etc/os-release && echo $VERSION_ID)"
BUILDER_VERSION=":${BUILDER_VERSION#:}"
